{
    "name": "dolly-shepherd/hello-dolly",
    "type": "wordpress-plugin",
    "description": "Integration of plugin Hello Dolly with Gato GraphQL",
    "authors": [
        {
            "name": "Dolly Shepherd",
            "email": "name@company.com",
            "homepage": "https://mysite.com"
        }
    ],
    "keywords": ["WordPress", "Gato", "GatoGraphQL", "GraphQL", "HelloDolly"],
    "homepage": "https://github.com/GatoGraphQL/hello-dolly",
    "require": {
        "php": "^8.1",
        "dolly-shepherd/hello-dolly-schema": "^1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^10.2",
        "squizlabs/php_codesniffer": "^3.6",
        "szepeviktor/phpstan-wordpress": "^1.0",
        "wpackagist-plugin/hello-dolly": "^1.7"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "DollyShepherd\\HelloDolly\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DollyShepherd\\HelloDolly\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "phpstan": "phpstan analyse -l 8 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.1-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "replace": {
        "pop-schema/schema-commons": "self.version"
    }
}
